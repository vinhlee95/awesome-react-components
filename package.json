{
	"name": "awesome-react-components",
	"version": "1.0.0",
	"description": "An awesome collection of React components",
	"main": "index.tsx",
	"author": "Vinh Le <lethanhvinh95@gmail.com>, Huy Trinh <dinhhuyams@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "parcel public/index.html --port 3009",
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "parcel build src/index.jsx",
		"storybook": "start-storybook -p 3010",
		"build-storybook": "build-storybook -c .storybook -o dist-storybook",
		"lint": "tslint --project tsconfig.json",
		"lint:fix": "tslint --fix --project tsconfig.json",
		"types-check": "tsc",
		"format": "prettier \"**/*.+(js|jsx|json|ts|tsx|md|mdx|graphql)\" --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged & yarn run types-check"
		}
	},
	"lint-staged": {
		"**/*.+(js|jsx|json|ts|tsx|md|mdx|graphql)": [
			"yarn run format",
			"git add"
		]
	},
	"dependencies": {
		"react": "16.13.1",
		"react-dom": "16.13.1"
	},
	"devDependencies": {
		"@babel/core": "^7.0.0-0",
		"@babel/preset-env": "7.9.6",
		"@babel/preset-react": "7.10.1",
		"@babel/preset-typescript": "7.10.1",
		"@storybook/react": "5.3.19",
		"@types/react": "16.9.36",
		"@types/react-dom": "16.9.8",
		"babel-loader": "8.1.0",
		"husky": "4.2.5",
		"lint-staged": "10.2.10",
		"parcel-bundler": "1.12.4",
		"prettier": "2.0.5",
		"tslint": "6.1.2",
		"tslint-config-prettier": "1.18.0",
		"tslint-plugin-prettier": "2.3.0",
		"typescript": "3.9.5"
	}
}
